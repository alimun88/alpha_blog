<%= render 'shared/errors', obj: @articles %>
  
<div class= "row cover-text">
  <div class= "col-md-4 col-md-offset-4">
    <div class="well">
    <%= form_for @articles do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: 'Title of Article', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, placeholder: 'Article description here', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
    <%= link_to 'Article Listing', articles_path, class: 'btn btn-info btn-lg' %>
    </div>
  </div>
</div>