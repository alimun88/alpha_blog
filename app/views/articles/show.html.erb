<div class="container">
    <div class="panel panel-default">
      <div class="panel-header">
        <h1 class="text-center"><%= @articles.title %></h1>
      </div>
      <div class="panel-body">
        <table class="table">
          <tr>
            <th>Description</th>
          </tr>
          <tr>
            <td><%= @articles.description %></td>
          </tr>
        </table>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
              <%= link_to 'Index', articles_path, class: 'btn btn-warning btn-md' %>
              <%= link_to 'Edit', edit_article_path(@articles), class: 'btn btn-primary btn-md' %>
              <%= link_to 'Delete', article_path(@articles), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-md' %>
          </div>
        </div>
      </div>
    </div>
</div>