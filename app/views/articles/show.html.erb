<div class="container">
    <div class="panel panel-default">
      <h1 class="text-center">Showing selected articles</h1>
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Index</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <tr>
          <td><%= @articles.title %></td>
          <td><%= @articles.description %></td>
          <td><%= link_to 'Index', articles_path, class: 'btn btn-warning btn-lg' %></td>
          <td><%= link_to 'Edit', edit_article_path, class: 'btn btn-primary btn-lg' %></td>
          <td><%= link_to 'Delete', article_path(@articles), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-lg' %></td>
        </tr>
      </table>
    </div>
</div>