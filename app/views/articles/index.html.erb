<div class="container">
    <div class="panel panel-default">
      <h1 class="text-center">Listing All articles</h1>
      <p class="text-center"><%= link_to 'Create New Article', new_article_path, class: 'btn btn-success btn-lg' %></p>
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th></th>
        </tr>
        <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, article_path(article) %></td>
            <td><%= truncate(article.description, length: 80) %></td>
            <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %></td>
              <tr>
                <td><small>Created by: <%= link_to article.user.username if article.user %>,
                      <%= time_ago_in_words(article.created_at) %> ago,
                      last updated <%= time_ago_in_words(article.updated_at) %> ago
                <small></td>
              </tr>
          </tr>
        <% end %>
      </table>
    </div>
</div>