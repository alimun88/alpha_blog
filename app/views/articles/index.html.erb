<div class="container">
    <div class="panel panel-default">
      <h1 class="text-center">Listing All articles</h1>
      <p class="text-center"><%= link_to 'Create New Article', new_article_path, class: 'btn btn-success btn-lg' %></p>
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Description</th>
        </tr>
        <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, article_path(article) %></td>
            <td><%= truncate(article.description, length: 80) %></td>
            <td colspan= "2"><%= link_to "Some User Info" %></td>
            <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </table>
    </div>
</div>