<div class="container">
    <div class="panel panel-default">
      <h1 class="text-center">Listing All articles</h1>
      <p><%= link_to 'Create New Article', new_article_path, class: 'btn btn-success btn-lg' %></p>
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Show', article_path(article), class: 'btn btn-warning btn-lg' %></td>
            <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-lg' %></td>
            <td><%= link_to 'Delete', article, class: 'btn btn-danger btn-lg' %></td>
          </tr>
        <% end %>
      </table>
    </div>
</div>