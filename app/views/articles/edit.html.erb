<div class="container cover">
  <div class= "row cover-text">
    
      <% if @articles.errors.any? %>
      <div class="alert alert-danger">
      <h3>The following errors prevented the article from getting created:</h3>
        <ul>
          <% @articles.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    
    <h1>Edit an Article </h1>
    <div class= "col-md-4 col-md-offset-4">
        <%= form_for @articles do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
        <%= link_to 'Back to Article Listing', articles_path, class: 'btn btn-info btn-lg' %>
    </div>
  </div>
</div>